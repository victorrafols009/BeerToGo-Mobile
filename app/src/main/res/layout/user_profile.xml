<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/user_logo"
            android:layout_width="match_parent"
            android:paddingTop="6dp"
            android:paddingLeft="16dp"
            android:paddingBottom="6dp"
            android:scaleType="fitCenter"
            android:layout_height="150dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="6dp"
            android:paddingLeft="10dp"
            android:paddingBottom="6dp">

            <TextView
                android:text="date created"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/date_created"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/cast_expanded_controller_ad_label_background_color"
                android:textStyle="normal|bold|italic"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAlignment="textEnd" />

            <TextView
                android:text="Full Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_full_name"
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:text="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_email"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:minLines="2" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/frameLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animationCache="true"
                android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                android:padding="10dp"
                android:layout_marginBottom="2dp">


                <TextView
                    android:id="@+id/friends_count"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:text="5"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:padding="2sp"
                    android:gravity="center"
                    android:background="@drawable/circle"
                    android:layout_gravity="top|right"
                    android:textSize="14sp" />

                <TextView
                    android:text="Friends"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:typeface="normal"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />

            </FrameLayout>
            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animationCache="true"
                android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                android:padding="10dp"
                android:layout_marginBottom="2dp">


                <TextView
                    android:id="@+id/inventory_count"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:text="5"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:padding="2sp"
                    android:gravity="center"
                    android:background="@drawable/circle"
                    android:layout_gravity="top|right"
                    android:textSize="14sp" />

                <TextView
                    android:text="Inventory"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:typeface="normal"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />

            </FrameLayout>
            <FrameLayout
                android:id="@+id/frameLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animationCache="true"
                android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                android:padding="10dp"
                android:layout_marginBottom="2dp">


                <TextView
                    android:id="@+id/transaction_count"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:text="5"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:padding="2sp"
                    android:gravity="center"
                    android:background="@drawable/circle"
                    android:layout_gravity="top|right"
                    android:textSize="14sp" />

                <TextView
                    android:text="Transactions"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:typeface="normal"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>