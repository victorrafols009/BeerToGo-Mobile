<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/colorPrimaryDark">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <ImageView
            android:src="@drawable/ic_profile_banner"
            android:id="@+id/user_banner"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="200dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_profile_pic"
                android:scaleType="fitCenter"
                android:id="@+id/user_logo"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/profile_border"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="149dp" />

            <TextView
                android:text="date created"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/date_created"
                android:layout_weight="1"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:textColor="#79ffffff"
                android:textStyle="normal|bold|italic"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAlignment="textStart"
                android:layout_below="@+id/user_banner"
                android:layout_toRightOf="@+id/user_logo"
                android:layout_toEndOf="@+id/user_logo"
                android:layout_marginTop="10dp" />


        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingBottom="6dp">

            <TextView
                android:text="Full Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_full_name"
                android:textStyle="normal|bold"
                android:maxLines="1"
                android:textColor="@color/colorAccent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center"/>

            <TextView
                android:text="Email"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:id="@+id/user_email"
                android:maxLines="2"
                android:ellipsize="end"
                android:minLines="2"
                android:textColor="@color/colorAccent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/profile_icons_border">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="90dp">

                <TextView
                    android:id="@+id/friends_count"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/circle"
                    android:layout_gravity="top|right"
                    android:backgroundTint="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color" />

                <ImageView
                    android:src="@drawable/ic_friends"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:animationCache="true"
                    android:layout_gravity="center_horizontal"/>


                <TextView
                    android:text="Friends"
                    android:layout_width="120dp"
                    android:layout_height="28dp"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="13sp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="90dp">


                <TextView
                    android:id="@+id/inventory_count"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/circle"
                    android:layout_gravity="top|right"
                    android:backgroundTint="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color" />

                <ImageView
                    android:src="@drawable/ic_inventory"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:animationCache="true"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:text="Inventory"
                    android:layout_width="120dp"
                    android:layout_height="28dp"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="13sp" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="90dp">


                <TextView
                    android:id="@+id/transaction_count"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/circle"
                    android:layout_gravity="top|right"
                    android:backgroundTint="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color" />

                <ImageView
                    android:src="@drawable/ic_transactions"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:animationCache="true"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:text="Transactions"
                    android:layout_width="120dp"
                    android:layout_height="28dp"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="13sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:text="Transactions with you"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="center_horizontal"
                android:gravity="center"/>
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="?android:attr/windowBackground"
        android:backgroundTint="@color/colorPrimaryDark">

    <ImageView
        android:src="@drawable/ic_check"
        android:layout_weight="1"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:padding="13dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="6dp"
        android:paddingLeft="10dp"
        android:paddingBottom="6dp">

        <TextView
            android:text="Description"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/store_name"
            android:textStyle="normal|bold"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorAccent"
            android:paddingTop="20dp"/>

        <TextView
            android:text="Date"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:id="@+id/store_address"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:minLines="2"
            android:textColor="#97ffffff"/>
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>